{
    "version": 2,
    "builds": [
        {
            "src": "youtube_project/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.12"
            }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles_build"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "youtube_project/wsgi.py"
        }
    ],
    "functions": {
        "youtube_app/static/js/index.js": {
            "maxDuration": 60
        }
    }
}